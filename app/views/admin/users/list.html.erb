<%  #@tickets = Purchase.where(:user_id => params[:user_id]).paginate(:page => params[:id], :per_page => 2).order('id DESC')
	@users = User.where(:ref_id => params[:id])
 %>



<div class="paginated_collection">
              <div class="paginated_collection_contents">
                <div class="index_content">
                  <div class="index_as_table">
                    <table border="0" cellspacing="0" cellpadding="0" id="index_table_tickets" class="index_table index" paginator="true" style="width: 70%; margin: 0 auto;">
                      
							<thead>
								<tr>
								 <!-- <th class="sortable first_name"><a href="/admin/purchases?user_id=4&amp;order=first_name_desc">First Name</a></th>
								  <th class="sortable last_name"><a href="/admin/purchases?user_id=4&amp;order=last_name_desc">Last Name</a></th> -->
								  <th class="first_name">First Name</th>
								  <th class="last_name">Last Name</th>
								  <th class="email">Email</th>
								  <th>Events</th>
								  <th>Purchases</th>
								  <th>Multi Users</th>
								  
								  <th>Current Status</th>
								  <th>&nbsp;</th>
								</tr>
							</thead>
							<tbody>
								
								<% 
								i=1
								  if @users.count > 0
									  for u in @users
									  	
								%>
								
									<tr class="<% if i%2==0 %> even <% else %>odd <% end %>" id="purchase_<%= u[:id] %>">
										 <td class="first_name"><%= u[:first_name] %></td>
										 <td class="last_name"><%= u[:last_name] %></td>
										 <td class="email"><%= u[:email] %></td>
										 <td>
										 	 <%= link_to image_tag('event.png', :title => 'Events'), {:controller => 'events', :action => 'list/'+u[:id].to_s} %>
										  </td>
										  <td>      
										     <%= link_to image_tag('ticketimg.png', :title => 'Tickets'), {:controller => 'purchases', :action => 'index/'+u[:id].to_s} %>
										  </td>
										  <td>      
										     <%= link_to image_tag('accountimg.png', :title => 'MultiUser Account', :height => '21'), {:controller => 'users', :action => 'list/'+u[:id].to_s} %>
										      
										 </td> 
										 <td>
										 	<% 
										 	    if u[:active]==0
										          links = 'Inactive'
										        else  
										          links = 'Active'
										        end  
										 	%><%= links %>
										 </td>
										 <td class="">
										 	<a href="/admin/users/delete_user/<%= u[:id] %>" class="member_link delete_link" data-confirm="Are you sure you want to delete this?" data-method="delete" rel="nofollow">Delete</a>
										 </td>
									</tr>
								<%
											i+=1
										
									end
								 else
									%>
									<tr class="odd">
										<td colspan="8" style="text-align: center;">No Records Available</td>
									</tr>
									 <%	
								end %>
							
							
								 
							                        
							</tbody>
 
                    </table>
                  </div>
                </div>
              </div>
              

            </div>
