							}).render().setUser('<%= @org[:twitter_link] %>').start();
							</script>  
							 
							<% else %>
							
							<script>
							new TWTR.Widget({
							  version: 2,
							  type: '<%= I18n.t 'button.search' %>',
							  search: '<%= @org[:search_link] %>',
