							  %>
							  <a href="<%= page_url %>"><img src="<%= APP_CONFIG['development']['upload_url'] %><%= img_full_path %>" alt=""  /></a>
							  
							  <%
							end
						 end
						if image_check==0
							%>
							<a href="<%= page_url %>"><img src="<%= APP_CONFIG['development']['app_url'] %>no_img.png" alt=""  /></a>
