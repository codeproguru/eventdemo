            	<div class="ticket_article shadow marT80 smallonly_marT150 ">                	
                     <div class="fr article_right min_img_size">
	                     	<%
			                   	image_check = 0
						      	if(@org[:org_logo]!=nil)
						            chk_img = check_img(@org[:org_logo],'org','thumb')	
