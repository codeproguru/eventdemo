	                            		<% if @org[:city1]!=nil && @org[:city1]!='' && @org[:city2]!=nil && @org[:city2]!='' %>, <% end %>
			                    		<% if @org[:city2]!=nil && @org[:city2]!='' %><%= @org[:city2] %><% end %>
	                            	</span>
	                            </strong>
		                    <% end %>
		                    
                            
