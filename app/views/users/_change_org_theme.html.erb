<script type="text/javascript" src="<%= APP_CONFIG['development']['js_url'] %>new_picker/spectrum.js"></script>     
	  
	  <script type="text/javascript">
	       function set_change_theme_apply(){
		
				 /*************** color picker *************/
						                
				$(".full").spectrum({
				    className: "full-spectrum",
				    maxPaletteSize: 10,
				    preferredFormat: "hex",
				    localStorageKey: "spectrum.demo",
				    
				});
				
			}
				
			function set_preview_org(ele,id){
					var hex = ele.value;
					
					if(id=='org_background'){
						$('#org_background').val(hex);
						$('.inner_preview').css('backgroundColor', hex);
					}
					if(id=='org_header_text'){
						$('#org_header_text').val(hex);
						$('.box h3').css('color', hex);
					}
					if(id=='org_box_background'){
						$('#org_box_background').val(hex);
						$('.box').css('backgroundColor', hex);
					}
					if(id=='org_body_text'){
						$('#org_body_text').val(hex);
						$('.box p').css('color', hex);
					}
					if(id=='org_box_border'){
						$('#org_box_border').val(hex);
						$('.box').css('border', '1px solid ' + hex);
						$('.box h3').css('borderBottom', '1px solid ' + hex);
					}
					if(id=='org_links'){
						$('#org_links').val(hex);
						$('.box a').css('color', hex);
					}
					if(id=='org_box_header'){
						$('#org_box_header').val(hex);
						$('.box h3').css('backgroundColor', hex);
					}
					
			}
	
	</script>
                         
  
  