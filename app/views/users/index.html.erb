<h1><%= I18n.t 'user_index.listing_users'%></h1>

<table>
  <tr>
    <th><%= I18n.t 'user.prefix'%></th>
    <th><%= I18n.t 'user.fname'%></th>
    <th><%= I18n.t 'user.lname'%></th>
    <th><%= I18n.t 'facebook_login.pwd'%></th>
    <th><%= I18n.t 'user.suffix'%></th>
    <th><%= I18n.t 'user.home_phone'%></th>
    <th><%= I18n.t 'user.cell_phone'%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.prefix %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.password %></td>
    <td><%= user.suffix %></td>
    <td><%= user.home_phone %></td>
    <td><%= user.cell_phone %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to  'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

